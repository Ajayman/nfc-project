generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Contact {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  comment     String
  email       String
  name        String
  phoneNumber String
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  price String
  title String
  description String
}

model User {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String 
  lastName String
  email    String @unique
  age String
  password String
}

model about {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  about_description String
  about_title       String
}
