{
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.iterable",
      "esnext",
      "ES2020",
      "WebWorker"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["app/components/*"],
      "@app/*": ["app/*"],
      "@lib/*": ["app/lib/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "app/page.jsx", "app/products/page.tsx", "app/components/SearchProducts.js", "app/api/searchProduct/route.js", "app/(page)/about/page.tsx", "app/products/[productId]", "app/components/SwiperCarousel.js", "app/components/categoryCarousel.js"  ],
  "exclude": [
    "node_modules"
  ]
}
